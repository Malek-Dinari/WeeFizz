{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",  // or "esnext"
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "src/**/*.js", "tests/**/*.js"],
  "exclude": ["node_modules", ".vscode"]
}
